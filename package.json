{
  "name": "flaggly",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler types && wrangler deploy",
    "dev": "wrangler dev",
    "build": "wrangler types && wrangler build",
    "start": "wrangler dev",
    "cf-typegen": "wrangler types",
    "test": "vitest",
    "test:run": "vitest run",
    "build:sdk": "tsup sdk/index.ts --dts --format esm,cjs --tsconfig sdk/tsconfig.sdk.json --out-dir sdk/dist",
    "sandbox:sdk": "tsx sdk/sandbox.ts"
  },
  "dependencies": {
    "hono": "^4.9.9",
    "jexl": "^2.3.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/jexl": "^2.3.4",
    "@types/node": "22.13.0",
    "@types/service-worker-mock": "^2.0.4",
    "nanostores": "^1.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.40.2"
  },
  "cloudflare": {
    "bindings": {
      "JWT_SECRET": {
        "description": "This is JWT secret used to verify and sign the API requests. Generate a random string using `openssl rand -hex 32`."
      },
      "ORIGIN": {
        "description": "Allowed origin for the service. Use a comma separated list for multiple origins."
      }
    }
  }
}
